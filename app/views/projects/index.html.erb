<p style="color: green"><%= notice %></p>

<h1>Projects</h1>

<%= link_to "Nový projekt", new_project_path, { class: "btn btn-info" } %>

<div class="table-responsive" id="projects">
  <table class="table align-middle">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Název</th>
        <th scope="col">Popis projektu</th>
        <th scope="col">Datum přidání</th>
        <th scope="col">Počet úkolů</th>
      </tr>
    </thead>
    <tbody class="table-group-divider">
      <% @projects.each do |project| %>
        <tr>
          <th scope="row"><%= project.id %></th>
          <td><%= project.name %>
          </td>
          <td style="word-wrap: break-word;min-width: 160px;max-width: 160px;"><%= project.description %>
          </td>
          <td><%= project.created_at.strftime("%d.%m/%Y") %></td>
          <th scope="row"><%= project.id %></th>
          <td><%= link_to "Show this project", project, { class: "btn btn-info" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
